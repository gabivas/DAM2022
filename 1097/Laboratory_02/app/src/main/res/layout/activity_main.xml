<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/imageViewEur"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/eur" />

        <TextView
            android:id="@+id/textViewEur"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="EUR:" />

        <EditText
            android:id="@+id/editTextEur"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
         />

        <ImageView
            android:id="@+id/imageViewUsd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/usd" />

        <TextView
            android:id="@+id/textViewUsd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="USD:" />

        <EditText
            android:id="@+id/editTextUsd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
         />

        <ImageView
            android:id="@+id/imageViewGbp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/gbp" />

        <TextView
            android:id="@+id/textViewGbp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="GBP:" />

        <EditText
            android:id="@+id/editTextGbp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btnShow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Button" />

        <Spinner
            android:id="@+id/spinner1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</ScrollView>